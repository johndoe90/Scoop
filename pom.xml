		</dependency>
		
		<dependency>
			<groupId>cglib</groupId>
			<artifactId>cglib-nodep</artifactId>
			<version>3.0</version>
		</dependency>
	  
	  	<!-- HTML Parser -->
	  	
		<dependency>
			<groupId>org.jsoup</groupId>
